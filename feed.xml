---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.name | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url | append: site.baseurl }}</link>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% assign sortedPosts = site.posts | sort: 'most_recent_edit' | reverse %}
    {% for post in sortedPosts limit: site.home.max_posts %}
      <item>
        {% assign updated = "" %}
        {% if post.most_recent_update %}
          {% assign updated = "(Updated) " %}
        {% endif %}
        <title>{{ updated }}{{ post.title | xml_escape }}</title>
        {% if post.subtitle %}
        <description>{{ post.subtitle | truncatehtml | truncatewords: 25 | xml_escape }} <br/><br/><a href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">Read more</a></description>
        {% else %}
        <description>{{ post.content | truncatehtml | truncatewords: 25 | xml_escape }} ... <br/><br/><a href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">Read more</a></description>
        {% endif %}
        <pubDate>{{ post.most_recent_edit | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        {% assign post_date = post.date | date: "%s" %}
        {% assign legacy = site.feeds.legacy_threshold | date: "%s" %}
        {% if post_date < legacy %}
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% else %}
        <guid isPermaLink="false">{{ post.url | to_hash: 'sha256' }}</guid>
        {% endif %}
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
