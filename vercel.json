{
  "public": false,
  "github": {
    "enabled": false,
    "silent": true
  },
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Strict-Transport-Security",
          "value" : "max-age=7776000;"
        },
        {
          "key" : "X-Content-Type-Options",
          "value" : "nosniff"
        },
        {
          "key" : "X-XSS-Protection",
          "value" : "1; mode=block"
        },
        {
          "key" : "X-Frame-Options",
          "value" : "SAMEORIGIN"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=600"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "application/json"
        },
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=60"
        }
      ]
    },
    {
      "source": "/feed.xml",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "application/rss+xml"
        },
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/atom.xml",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "application/atom+xml"
        },
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=3600"
        }
      ]
    }
  ],
  "redirects": [
    { "source": "/pgp", "destination": "/pgp.txt", "permanent": true },
    { "source": "/utils", "destination": "/code", "permanent": false },
    { "source": "/utilities", "destination": "/code", "permanent": false }
  ]
}
