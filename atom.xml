---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="https://www.w3.org/2005/Atom">
  <id>https://fpira.com/blog</id>
  <title>{{ site.name | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <author>
    <name>{{ site.name }}</name>
    <uri>{{ site.url }}</uri>
  </author>
  <link href="{{ site.url | append: site.baseurl | append: site.feeds.atom }}" rel="self" type="application/atom+xml" />
  <updated>{{ site.time | date_to_rfc822 }}</updated>
  <generator>Jekyll v{{ jekyll.version }}</generator>
  {% assign sortedPosts = site.posts | sort: 'most_recent_edit' | reverse %}
  {% for post in sortedPosts limit: site.home.max_posts %}
    <entry>
      {% assign post_date = post.date | date: "%s" %}
      {% assign legacy = site.feeds.legacy_threshold | date: "%s" %}
      {% if post_date < legacy %}
      <id>{{ post.url | prepend: site.baseurl | prepend: site.url }}</id>
      {% else %}
      <id>{{ post.url | to_hash: 'sha256' }}</id>
      {% endif %}
      <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
      {% assign updated = "" %}
      {% if post.most_recent_update %}
        {% assign updated = "(Updated) " %}
      {% endif %}
      <title>{{ updated }}{{ post.title | xml_escape }}</title>
      {% if post.subtitle %}
      <summary>{{ post.subtitle | truncatehtml | truncatewords: 25 | xml_escape }} <br/><br/><a href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">Read more</a></summary>
      {% else %}
      <summary>{{ post.content | truncatehtml | truncatewords: 25 | xml_escape }} ... <br/><br/><a href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">Read more</a></summary>
      {% endif %}
      <published>{{ post.date | date_to_rfc822 }}</published>
      <updated>{{ post.most_recent_edit | date_to_rfc822 }}</updated>
      {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
    </entry>
  {% endfor %}
</feed>
